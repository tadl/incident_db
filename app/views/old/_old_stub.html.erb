<div class="card mb-3">
    <div class="card-body">
        <div class="row">
            <div class="col-lg-3">
                <% if r.primary_pic %>
                    <%= image_tag r.primary_pic.variant(:thumb), class: 'img-thumbnail' %>
                <% else %>
                <% end %>
            </div>
            <div class="col-lg-9">
                <h4 class="card-title"><%= r.title %></h4>
                <b>Date of Incident:</b> <%= r.date_of_pretty %> <%= r.time_of_in_zone %>
                <b>ID:</b> <%= r.legacy_id %> 
                <p class="card-text" style="white-space: pre-wrap;"><%= truncate(r.description, length: 400, separator: /\s/, omission: '...') %></p>
                <% if r.patron_name && r.patron_name != '' %>
                    <p>
                        <b>Patron Involved:</b> <%= r.patron_name %>
                    </p>
                <% end %>
                
                <% if r.has_violations? %>
                    <p class="card-text" style="white-space: pre-wrap;"><b>Violations:</b> <%= r.violations %></p>
                <% end %>
                <% if r.suspension == 'Yes' %>
                    <p class="card-text" style="white-space: pre-wrap;"><b>Suspended for:</b> <%= r.suspension_duration %></p>
                <% end %>
                <div class="mt-3">
                    <a href="/old/view?id=<%= r.id %>" class="btn btn-primary"> <%= icon('fa-solid', 'eye') %> View Full Details</a>
                </div>
            </div>
        </div>
    </div>
</div>