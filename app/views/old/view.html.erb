<h2>
   <%= @report.title %>
</h2>
<div class="mt-1 mb-2">
    <b>Date of Incident:</b> <%= @report.date_of_pretty %> <%= @report.time_of_in_zone %>
    <b>Location:</b> <%= @report.location %>
    <b> Submitted by:</b> <%= @report.submitted_by %>
    <b>ID:</b> <%= @report.legacy_id %> 
</div>
<% if @report.images.size >= 1 %>
    <div class="row mt-3 mb-3">
        <% @report.images.each do |i| %>
            <div class="col-lg-3 col-md-6">
                <a href="<%= url_for(i) %>" target="_blank">
                    <%= image_tag i.variant(:thumb), class: 'img-thumbnail' %>
                </a>
            </div>
        <% end %>
    </div>
<% end %>
<div class="mb-3">
    <p style="white-space: pre-wrap;"><b>Description:</b> <%= @report.description %></p>
</div>
<% if @report.narrative && @report.narrative != '' %>
    <div class="mb-3">
        <p style="white-space: pre-wrap;"><b>Staff Narrative:</b> <%= @report.narrative %></p>
    </div>
<% end %>
<% if @report.patron_name && @report.patron_name != '' %>
    <p>
        <b>Patron Involved:</b> <%= @report.patron_name %>
    </p>
<% end %>
<% if @report.has_violations? %>
    <p class="card-text" style="white-space: pre-wrap;"><b>Violations:</b> <%= @report.violations %></p>
<% end %>
<% if @report.suspension == 'Yes' %>
    <p class="card-text" style="white-space: pre-wrap;"><b>Suspended for:</b> <%= @report.suspension_duration %></p>
<% end %>

