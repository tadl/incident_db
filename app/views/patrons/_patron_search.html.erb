<div class="mt-3">
    <ul class="nav nav-tabs">
      <li class="nav-item">
        <a class="nav-link tab-link active" aria-current="page" onclick="load_new_patron_form()">Create a New Patron</a>
      </li>
      <li class="nav-item">
        <a class="nav-link tab-link active">Add a Patron from a Previous Incident</a>
      </li>
    </ul>
    <div class="row mt-3 mb-3">
      <div class="col-lg-4">
        <div class="input-group mb-3">
          <input type="text" class="form-control" id="patron_query" aria-describedby="patron_search" maxlength="50">
          <button type="button" class="btn btn-primary btn-sm" onclick="patron_search(true)"><%= icon('fa-solid', 'search') %> Search Patrons</button>
        </div>
      </div>
    </div>
    <div id="search_results">
    </div>
</div>
<div class="mb-3">
    <button type="button" class="btn btn-danger btn-lg" onclick="cancel_add_patron()"><%= icon('fa-solid', 'ban') %> Cancel</button>
</div>
<script>
    document.getElementById("patron_query").addEventListener("keyup", function(event) {
        event.preventDefault();
        if (event.keyCode === 13) {
            patron_search(true)
        }
    });
</script>