<b>Violations:</b>
<br>
<% violations.each do |v| %>
    <% unless violations.size > 1 && v.description == 'None' %>
        <%= v.description %>
            <% unless v.description == 'None' %>
                <% if !patron.suspension_for(@incident.id) || current_user.can_suspend %>
                    <button type="button" class="btn btn-danger btn-sm mb-1" onclick="remove_violation(<%= patron.id %>,<%= v.id %>)">
                        <%= icon('fa-solid', 'xmark') %>
                    </button>
                <% end %>
            <% end %>
        <br>
    <% end %>
<% end %>