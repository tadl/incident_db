<div id="violation_modal_<%= @patron_id %>" class="modal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add Violations</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <% @violations.each do |v| %>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="<%= v.id %>" id="violation_<%= v.id %>">
                        <label class="form-check-label" for="violation_<%= v.id %>">
                            <%= v.violation_format %>
                        </label>
                    </div>
                <% end %>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <%= icon('fa-solid', 'xmark') %> 
                    Close
                </button>
                <button type="button" class="btn btn-primary" onclick="save_violations(<%= @patron_id %>)">
                    <%= icon('fa-solid', 'check') %> 
                    Save
                </button>
            </div>
        </div>
    </div>
</div>