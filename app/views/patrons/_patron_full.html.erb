<div class="row mt-3 mb-3">
    <div class="col-lg-3">
        <% if p.images.size >= 1 %>
            <% p.images.each do |pic| %>
                <a href="<%= url_for(pic) %>>" target="_blank">
                    <%= image_tag pic.variant(:thumb), class: 'img-thumbnail', style: 'width: 250px' %>
                </a>
            <% end %>
        <% end %>
    </div>
    <div class="col-lg-9">
        <h5><%= p.full_name %></h5>
        <% if p.description && !p.description.blank? %>
            <b>Description:</b>
            <br>
            <%= p.description %>
            <br>
        <% end %>
        <% if !p.full_address.blank? %>
            <b>Address:</b>
            <br>
            <%= p.full_address%>
            <br>
        <% end %>
        <% if p.card_number && !p.card_number.blank? %>
            <b>Library Card #:</b>
            <br>
            <%= p.card_number %>
            <br>
        <% end %>
        <% if p.incidents.size >= 1 %>
            <b>Incidents:</b>
            <br>
            <% p.unique_incidents.each do |i| %>
                    <%= i.date_of_in_time_zone_minus_time %> <a href="/incidents/view?id=<%=i.id%>" target="_blank"><%= i.title %></a>
                    <div class="ms-3">
                        <b>Violations:</b>
                        <ul>
                            <% p.violations_per_incident(i.id).each do |v| %>
                                <li><%= v.description %></li>
                            <% end %>
                        </ul>
                    </div>
            <% end %>
        <% end %>
    </div>
</div>
<div class="mt-3 mb-3">
    <a href="/patrons/edit?patron_id=<%= p.id %>" class="btn btn-primary"><%= icon('fa-solid', 'pen') %> Edit Patron Record</a>
</div>