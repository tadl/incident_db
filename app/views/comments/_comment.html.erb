<div id="comment_<%= c.id %>" class="card mb-3">
    <div class="card-body">
        <div class="row">
            <div class="col-lg-1">
                <img src='<%= c.submitted_by_pic %>' class="img-fluid">
            </div>
            <div class="col-lg-10">
                <b><%= c.submitted_by %></b> 
                <i>Posted on: <%= c.posted_on %></i>
                <% if c.was_edited %>
                <i>Edited on: <%= c.edited_on %></i>
                <% end %>
                <% if current_user.my_comment(c) %>
                    <a href="#" onclick="edit_comment(<%= c.id %>, '<%= from %>', <%= owner_id %>)">Edit</a>
                    <a href="#" onclick="delete_comment(<%= c.id %>, '<%= from %>', <%= owner_id %>); event.preventDefault()">Delete</a>
                <% end %>
                <br>
                <%= c.description %>
                <br>
            </div>
        </div>
    </div>
</div>