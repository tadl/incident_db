 <h2 class="mb-3"><%= icon('fa-solid', 'search') %> Searching Incidents</h2>
 <div class="row mt-3 mb-3">
    <div class="col-lg-6">
      <div class="input-group mb-3">
            <input type="text" class="form-control" id="query" aria-describedby="patron_search" maxlength="50" autocomplete="off" value="<%= @query %>">
            <button type="submit" class="btn btn-primary btn-sm" onclick="search_incidents()"><%= icon('fa-solid', 'search') %> Search Incidents</button>
      </div>
    </div>
</div>
<%= will_paginate @incidents, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
<% @incidents.each do |i| %>
   <%= render 'incident_stub', i: i %>
<% end %>
<%= will_paginate @incidents, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
<script>
    document.getElementById("query").addEventListener("keyup", function(event) {
        event.preventDefault();
        if (event.keyCode === 13) {
            search_incidents()
        }
    });
</script>