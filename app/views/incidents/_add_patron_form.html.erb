<%= render 'patrons/patron_form', patron: Patron.new %>
<div class="mb-3">
    <button type="button" class="btn btn-primary btn-lg" onclick="save_patron(<%= patron.id %>)"><%= icon('fa-solid', 'plus') %> Add This Patron to Incident</button>
